<%- include("partials/_header") %>

    <body>

        <%- include("partials/_nav") %>

            <main class="container">
                <div class="d-flex justify-content-center">
                    <div class="card w-50 ">
                        <div class="card-header text-center">
                            <h2>Sign in</h2>
                        </div>
                        <div class="card-body">
                            <form action="/user/signin" method="post">
                                <div class="form-group">
                                    <label>User Name</label>
                                    <input name="username" type="tel" class="form-control"></input>
                                </div>
                                <div class="form-group">
                                    <label>Name</label>
                                    <input name="name" type="tel" class="form-control"></input>
                                </div>
                                <div class="form-group">
                                    <label>Email</label>
                                    <input name="email" type="email" class="form-control"></input>
                                </div>
                                <div class="form-group">
                                    <label>Password</label>
                                    <input name="password" type="password" class="form-control" </input>
                                </div>
                                <div class="form-group mt-2 d-flex  justify-content-end">
                                    <div class="d-flex flex-column">
                                        <input class="btn btn-primary" type="submit" value="Register" />
                                        <a href="/login" class="btn btn-link">Login</a>
                                    </div>

                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </main>

    </body>

    <%- include("partials/_footer") %>